<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <style>
    .product-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 20px;
      padding: 20px;
    }
    .product-card {
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 15px;
      text-align: center;
    }
    .product-image {
      width: 200px;
      height: 200px;
      object-fit: cover;
      border-radius: 4px;
    }
    .product-name {
      font-size: 1.2em;
      margin: 10px 0;
    }
    .product-price {
      color: #2ecc71;
      font-weight: bold;
      font-size: 1.1em;
    }
    .product-description {
      color: #666;
      margin: 10px 0;
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>
  <h1>Product List</h1>
  <% if (products.length === 0) { %>
    <p>No products found.</p>
  <% } else { %>
    <div class="product-grid">
      <% products.forEach(product => { %>
        <div class="product-card">
          <img src="<%= product.image %>" alt="<%= product.name %>" class="product-image">
          <h2 class="product-name"><%= product.name %></h2>
          <p class="product-description"><%= product.description %></p>
          <p class="product-price">$<%= product.price.toFixed(2) %></p>
          <a href="/product/<%= product._id %>" style="display: inline-block; padding: 8px 16px; background-color: #3498db; color: white; text-decoration: none; border-radius: 4px;">View Details</a>
        </div>
      <% }); %>
    </div>
  <% } %>
</body>
</html>